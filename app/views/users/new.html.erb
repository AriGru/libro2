<div class="sign-up-box">

<div class="name">
  <h1>L I B R O</h1>
  <h2>Find your book, join the discussion.<h2>

</div>

  <div class="form">
    <h3>Sign Up</h3>
    <%= form_for @user, html: { multipart: true } do |f| %>

      <p>
       <%= f.text_field :username, placeholder: "Username", class: 'form' %>
      </p>

      <p>
       <%= f.password_field :password, placeholder: "Password", class: 'form' %>
      </p>

      <p>
       <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: 'form' %>
      </p>

      <p>
         <%= f.text_field :name, placeholder: "Name", class: 'form' %>
      </p>

      <p>
        <%= f.file_field :image, placeholder:"Upload a Picture", class: 'form' %>
      </p>

      <p>
        <%= f.text_field :bio, placeholder: "Bio", class: 'form' %>
      </p>

      <p>
        <%= f.submit "Sign Up", class: 'animated'  %>
      </p>

        <% end %>

  </div>

</div>
