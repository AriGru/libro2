<p id="notice"><%= notice %></p>

<h1>Discovery Page</h1>

<table>
  <thead>
    <tr>

      <!-- <th>User</th> -->

      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <%#book.inspect %>
        <% if book.url %>
          <%= link_to image_tag(book.url), book %>
        <% end %>

        <td><% link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
