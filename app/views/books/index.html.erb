<p id="notice"><%= notice %></p>

<h2>Trending Books</h2>

<table>

  <tbody>
    <% @books.each do |book| %>
    <div class="book_img">
      <tr>
        <% if book.url %>
     <%= link_to image_tag(book.url), book %> </div>
        <% end %>
      </div>
        <td><% link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Book', new_book_path %>
