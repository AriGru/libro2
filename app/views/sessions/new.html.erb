<div class="sign-up-box">

<div class="intro">
  <h1 class="title-name">L I B R O</h1>
  <h2 class="tag-line">Find your book, join the discussion.<h2>
</div>

<div class="form">
  <h3 class="sign-up-title">Log In</h3>
    <%= form_tag sessions_path do %>
    <p>
      <%= label_tag :username %><br>
      <%= text_field_tag :username, class: 'form' %><br>
    </p>
    <p>
      <%= label_tag :password %><br>
      <%= password_field_tag :password, class: 'form'  %><br>
    </p>
    <p>
      <%= submit_tag 'Log in' %>
    </p>
  <% end %>

</div>

</div>
